<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="upt.gestaodespesas.controller.ProfileController"
      spacing="18">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Perfil" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Dados -->
    <VBox spacing="8">
        <Label text="Dados do utilizador" style="-fx-font-weight: bold;"/>
        <GridPane hgap="10" vgap="10">
            <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        </GridPane>

        <Button text="Guardar Perfil" onAction="#onSaveProfile" maxWidth="160"/>
    </VBox>

    <Separator/>

    <!-- Password -->
    <VBox spacing="8">
        <Label text="Alterar password" style="-fx-font-weight: bold;"/>

        <GridPane hgap="10" vgap="10">
            <Label text="Password atual:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <PasswordField fx:id="currentPasswordField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Nova password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <PasswordField fx:id="newPasswordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Confirmar:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <PasswordField fx:id="confirmPasswordField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>

        <Button text="Alterar Password" onAction="#onChangePassword" maxWidth="160"/>
    </VBox>

</VBox>

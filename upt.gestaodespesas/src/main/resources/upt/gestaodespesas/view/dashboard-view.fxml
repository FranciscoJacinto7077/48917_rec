<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="upt.gestaodespesas.controller.DashboardController" spacing="20" style="-fx-padding: 20;">
    
    <!-- Welcome Section -->
    <VBox spacing="5">
        <Label fx:id="welcomeLabel" text="Olá!" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Label text="Aqui está um resumo dos seus gastos" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
    </VBox>
    
    <!-- Quick Actions -->
    <HBox spacing="10">
        <Button text="+ Nova Despesa" onAction="#onNewExpense" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 12 24;"/>
        <Button text="Ver Todas" onAction="#onViewAll" style="-fx-background-color: #ecf0f1; -fx-text-fill: #2c3e50; -fx-background-radius: 8; -fx-padding: 12 24;"/>
    </HBox>
    
    <Label text="Últimos 30 Dias" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #7f8c8d; -fx-padding: 10 0 0 0;"/>
    
    <!-- Stats Grid -->
    <GridPane hgap="20" vgap="20">
        <columnConstraints>
            <ColumnConstraints percentWidth="50"/>
            <ColumnConstraints percentWidth="50"/>
        </columnConstraints>
        
        <!-- Total Spent Card -->
        <VBox GridPane.columnIndex="0" GridPane.rowIndex="0" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
            <Label text="Total Gasto" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
            <Label fx:id="totalLabel" text="€0.00" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;"/>
        </VBox>
        
        <!-- Average Daily Card -->
        <VBox GridPane.columnIndex="1" GridPane.rowIndex="0" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
            <Label text="Média Diária" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
            <Label fx:id="avgLabel" text="€0.00" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #3498db;"/>
        </VBox>
        
        <!-- Biggest Expense Card -->
        <VBox GridPane.columnIndex="0" GridPane.rowIndex="1" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
            <Label text="Maior Despesa" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
            <Label fx:id="biggestExpenseLabel" text="N/A" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        </VBox>
        
        <!-- Top Category Card -->
        <VBox GridPane.columnIndex="1" GridPane.rowIndex="1" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
            <Label text="Top Categoria" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
            <Label fx:id="topCategoryLabel" text="N/A" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        </VBox>
    </GridPane>
    
</VBox>

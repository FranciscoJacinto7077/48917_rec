<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="upt.gestaodespesas.controller.TotaisController"
      spacing="14">

    <padding>
        <Insets top="18" right="18" bottom="18" left="18"/>
    </padding>

    <Label text="Totais" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <HBox spacing="12" alignment="CENTER_LEFT">
        <Label text="Ano:"/>
        <ComboBox fx:id="yearBox" prefWidth="110"/>

        <Label text="Mês:"/>
        <ComboBox fx:id="monthBox" prefWidth="110"/>

        <Button text="Atualizar Total Mensal" onAction="#onRefreshMonthly"/>

        <Label text="Total:" style="-fx-font-weight: bold;"/>
        <Label fx:id="monthlyTotalLabel" text="—" style="-fx-font-weight: bold;"/>
    </HBox>

    <Separator/>

    <Label text="Totais por Categoria (opcional por período)" style="-fx-font-weight: bold;"/>

    <HBox spacing="12" alignment="CENTER_LEFT">
        <Label text="Data início:"/>
        <DatePicker fx:id="startDatePicker"/>

        <Label text="Data fim:"/>
        <DatePicker fx:id="endDatePicker"/>

        <Button text="Atualizar Totais por Categoria" onAction="#onRefreshByCategory"/>
        <Button text="Atualizar Tudo" onAction="#onRefreshAll"/>
    </HBox>

    <TableView fx:id="table" prefHeight="420">
        <columns>
            <TableColumn fx:id="catColumn" text="Categoria" prefWidth="280"/>
            <TableColumn fx:id="totalColumn" text="Total (€)" prefWidth="140"/>
        </columns>
    </TableView>

</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="upt.gestaodespesas.controller.ChangePasswordController" spacing="15">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Alterar Password" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    
    <VBox spacing="5">
        <Label text="Password Atual:"/>
        <PasswordField fx:id="currentPasswordField"/>
    </VBox>
    
    <VBox spacing="5">
        <Label text="Nova Password:"/>
        <PasswordField fx:id="newPasswordField"/>
    </VBox>
    
    <VBox spacing="5">
        <Label text="Confirmar Nova Password:"/>
        <PasswordField fx:id="confirmPasswordField"/>
    </VBox>
    
    <Button text="Alterar" onAction="#onChangePassword" maxWidth="150"/>
</VBox>
